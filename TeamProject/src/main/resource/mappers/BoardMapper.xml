<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="boardMapper">
<select id="selectBoard" resultType="string">
select * from board where boardId = #{boardId};
</select>
<insert id="insertBoard">
insert into board(userid, boardTitle, boardContent) values(#{userid},#{boardTitle},#{boardContent});
</insert>
<update id="updateBoard">
update board set userid = #{userid}, boardTitle = #{boardTitle}, boardContent = #{boardContent} where boardId = #{boardID};
</update>
<delete id="deleteBoard">
delete from board where boardId=#{boardId};
</delete>
</mapper>